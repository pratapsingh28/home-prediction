import pandas as pd
import numpy as np
import math

import matplotlib.pyplot as plt
import seaborn as sns

df=pd.read_csv("Store.csv",encoding="Latin")
df.head()

df.columns

df.shape

df.isnull().sum()

df.describe()

df.tail()

df.head()

df.hist()

dff=pd.read_csv("dm.csv")
dff.head()

sns.countplot(x="OwnHome",hue="Married",data=dff)

dff=pd.get_dummies(dff)

dff.head()

dff.drop(["Salary","Children","Cust_Id","Catalogs","Age_Young","Location_Close","Location_Far","History_High","History_Low","History_Medium","OwnHome_Rent","Married_Single","Gender_Male"],axis=1)

x=dff[["AmountSpent","Age_Middle","Age_Old","Gender_Female","Married_Married"]]
y=dff[["OwnHome_Own"]]

from sklearn.model_selection import train_test_split

x_train,x_test,y_train,y_test=train_test_split(x,y,test_size=0.3)

from sklearn.linear_model import LogisticRegression

lr=LogisticRegression()

x_train.head(20)

y_train.head(20)

lr.fit(x_train,y_train)

from sklearn.metrics import mean_squared_error

y_pred=lr.predict(x_test)

y_pred[0:5]

y_test[:5]

from sklearn.metrics import mean_squared_error

mean_squared_error(y_pred,y_test)

from sklearn.metrics import classification_report

classification_report(y_test,y_pred)

from sklearn.metrics import confusion_matrix
confusion_matrix(y_test,y_pred)

from sklearn.metrics import accuracy_score

accuracy_score(y_test,y_pred)

